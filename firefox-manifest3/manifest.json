
{
    "manifest_version": 3,
    "name": "Proxy Authentication Helper",
    "version": "1.0.0",
    "description": "Automatically enters proxy password when authentication is required.",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "proxy"
    ],
    "host_permissions": [
        "<all_urls>"
    ],    
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "match_about_blank" : true,
            "js": ["content.js"]
        }
    ]
}
